<center>

  <div id=<%=browser_info.mobile? ? "bg_mobile" : "bg" %> > 
      <div class=<%=browser_info.mobile? ? "hero-text-mobile" : "hero-text"%> >
        Les Filles d'Antoine
      </div>
  </div>

</center>

<% unless @posts.empty? %>
  <h3 style="font-family: 'lato-bold';padding-left: <%=browser_info.mobile? ? '5px' : '10%' %>; padding-right: <%=browser_info.mobile? ? 0 : 10%>%; padding-bottom: <%=browser_info.mobile? ? 25 : 20%>px">  <i class="fa fa-newspaper-o" aria-hidden="true"></i>&nbsp;&nbsp; Les news... </h3>

  <div class="<%= browser_type %>-content digg_pagination" > <%= will_paginate @posts, :previous_label => '← Précédent', :next_label => 'Suivant →'  %> </div> 
  <br>
  <% @posts.each do |post| %>
    <div id= <%="post-#{post.id}" %> style="padding-left: <%=browser_info.mobile? ? 0 : 10%>%; padding-right: <%=browser_info.mobile? ? 0 : 10%>%" >
      <div class="card img-responsive border-white">
        <div class="card-header">
          <% if browser_info.mobile? %>
            <h5> <b> <%= post.created_at.strftime("%d/%m/%Y") %> - <%= post.title %> </b></h5>
          <% else %>
            <h4> <b> <%= post.created_at.strftime("%d/%m/%Y") %> - <%= post.title %> </b></h4>
          <% end %>
        </div>
        <br> 
        <div class="text-justify" style="padding-left: 30px; padding-right: 30px; float:right;">
          <%= post.content %>
        </div>
        <br>
        
        <div style="center;">
          <%= image_tag(post.images[0], size: '500', class: "img-responsive", style: "padding-bottom: 10px; padding-left: 30px; padding-right: 30px;") %>
        </div>

      </div>
      <br> <br>
    </div>
    
  <% end %>
  <div class="<%= browser_type %>-content digg_pagination" > <%= will_paginate @posts, :previous_label => '← Précédent', :next_label => 'Suivant →'  %> </div> 
<% end %>
