<% if (!@products_spring.empty? || !@products_summer.empty?) %>
  <h5> Passez votre commande </h5>
  <%= form_for @booking, url: "/reservation", html: { method: :post } do |f| %>
    <% unless @products_spring.empty? %>
      <div class="my-5">
        <table class="table table-hover" style="width:20%">
          <tr>
            <th class="align-middle" style="width: 70%"> Printemps <%= Time.new.year %> </th>
            <th class="align-middle" style="width: 30%"> Quantité </th>
          </tr>
          <% @products_spring.each do |product| %>
            <tr id="product-<%= product.id %>">
              <td class="align-middle"><%= f.label product.description %></td>
              <td class="align-middle"><%= f.number_field (product.description + '_' + product.season).to_sym, :value => @booking[(product.description + '_' + product.season).to_sym], placeholder: '0', max: 100, style:"width:40px" %></td>
            </tr>
          <% end %>
        </table>
      </div>
    <% end %>

    <% unless @products_summer.empty? %>
      <div class="my-5">
          <table class="table table-hover" style="width:20%">
          <tr>
            <th class="align-middle" style="width: 70%"> Eté <%= Time.new.year %> </th>
            <th class="align-middle" style="width: 30%"> Quantité </th>
          </tr>
          <% @products_summer.each do |product| %>
            <tr id="product-<%= product.id %>">
              <td class="align-middle"><%= f.label product.description %></td>
              <td class="align-middle"><%= f.number_field (product.description + '_' + product.season).to_sym, :value => @booking[(product.description + '_' + product.season).to_sym], placeholder: '0', max: 100, style:"width:40px" %></td>
            </tr>
          <% end %>
          </table>
      </div>
    <% end %>
    <%= f.submit("Réserver") %>
    <br>
    <br>
    <br>
    <h5> Vous serez contacté(e) quand vos pots seront disponibles. </h5>
  <% end %>
<% else %>
  <h5> <i class="fa fa-frown-o" aria-hidden="true"></i>  Désolé, il n'y a pas de pots disponibles pour le moment. Revenez nous rendre visite bientôt! </h5>
<% end %>
