<% unless locals[:products].empty? %>
  <div>
    <table class="table table-hover table-sm" style="width: <%=browser_info.mobile? ? "100%" : "450px" %>">
      <thead class="thead-light">
        <tr>
          <th class="align-middle" style="width: <%=browser_info.mobile? ? '145px' : '50%'%>"> <%= locals[:title]%> <%= Time.new.year %> </th>
          <th class="align-middle" style="width: 30%"> Prix Unité </th>
          <th class="align-middle" style="width: 20%"> Quantité </th>
        </tr>
      </thead>
      <% locals[:products].each do |product| %>
        <tr id="product-<%= product.id %>">
          <td class="align-middle"><%= product.description %></td>
          <td class="align-middle"><%= "#{product.price} €" %> </td>
          <td class="align-middle"><%= locals[:form].number_field (product.description + '_' + product.season).to_sym, :value => locals[:booking][(product.description + '_' + product.season).to_sym], placeholder: '0', max: 100, min: 0, style:"width:40px" %></td>
        </tr>
      <% end %>
    </table>
  </div>
<% end %>
  