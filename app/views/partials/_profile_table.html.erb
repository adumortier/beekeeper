<table class="table" style="width:500px">
      <tr>
        <th class="align-middle" style="border: 0; width: 10px;"> </th>
        <th class="align-middle" style="border: 0; width: 450px;"> </th>
      </tr>
      <tr>
        <td class="align-middle" style="text-align:left; border-top: 0"> <i class="fa fa-address-card" aria-hidden="true"></i> </td>
        <td class="align-middle" style="text-align:left; border-top: 0"> <%=locals[:user].full_name %> </td>
      </tr>
      <tr>
        <td class="align-middle" style="text-align:left; border-top: 0"> <i class="fa fa-envelope-open-o" aria-hidden="true"> </td>
        <td class="align-middle" style="text-align:left; border-top: 0"> <%=locals[:user].email%> </td>
      </tr>
      <tr>
        <td class="align-middle" style="text-align:left; border-top: 0"> <i class="fa fa-phone" aria-hidden="true"></i> </td>
        <td class="align-middle" style="text-align:left; border-top: 0"> <%=locals[:user].phone_number%> </td>
      </tr>
      <tr>
        <td class="align-middle" style="text-align:left; border-top: 0"> <i class="fa fa-map-o" aria-hidden="true"></i> </td>
        <td class="align-middle" style="text-align:left; border-top: 0"> <%=locals[:user].full_address %> </td>
      </tr>

</table>