<h4> <i class="fa fa-cubes" aria-hidden="true"></i> Mes produits </h4>
  
    <div class="my-5"></div>
      <table class="table table-hover" style="width: 80%">
      <tr>
        <th class="align-middle" style="width: 20%"> Description </th>
        <th class="align-middle" style="width: 15%"> Prix </th>
        <th class="align-middle" style="width: 17%"> Saison  </th>
        <th class="align-middle" style="width: 13%"> Ann√©e  </th>
        <th class="align-middle" style="width: 13%"> Status  </th>
        <th style="width: 13%"></th>
        <th style="width: 10%"></th>
      </tr>
      <% @products.each do |product| %>
        <tr id="product-<%= product.id %>">
          <td class="align-middle"><%= product.description %></td>
          <td class="align-middle"><%= product.price %></td>
          <td class="align-middle"><%= product.season %></td>
          <td class="align-middle"><%= product.year %></td>
          
          <% if product.status == 'active'%>
            <td class="align-middle"><span class="badge badge-pill badge-success">actif</span> </td>
          <% else %>
            <td class="align-middle" style="text-align:left"><span class="badge badge-pill badge-secondary">inactif</span> </td>
          <% end %>
          <td class="align-middle"> <a href= <%="/admin/products/#{product.id}/edit " %>><i class="fa fa-pencil fa-fw" aria-hidden="true"></i>&nbsp; Modifier</a> </td>
          <td class="align-middle"> <a href= <%="/admin/products/#{product.id}" %> data-method="delete"> <i class="fa fa-trash" aria-hidden="true"></i>&nbsp; Effacer</a> </td>
          </td>
        </tr>
      <% end %>
      </table>
    </div>

    <a class="btn btn-outline-secondary" href='/admin/products/new'><i class="fa fa-plus-circle" aria-hidden="true"></i>&nbsp; Ajouter un produit</a>