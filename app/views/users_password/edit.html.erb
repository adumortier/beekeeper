<center>
<div class=<%=browser_info.mobile? ? "top-nav-content-mobile" : "top-nav-content" %>> </div>
  <h3> Modifier votre mot de passe </h3>
  <br>
  <%= form_with model: @user, url: '/user/password', local: true, method: :patch do |f| %>
    <p> <%= f.password_field :password, :value => @user[:password], placeholder: 'Mot de passe *'  %> </p>
    <p> <%= f.password_field :password_confirmation, :value => @user[:password_confirmation], placeholder: 'Confirmation *'  %> </p>
    <br>
    <%= f.submit("Enregistrer") %>
  <% end %>
 </div>
 </center>